<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pavel.finalpj10.StatisticsActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/Table"
        android:layout_width="372dp"
        android:layout_height="335dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/aimm" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:text="Вами было запланировано:"
        android:textSize="17sp"
        android:textColor="#ff6600"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="11dp"
        android:text="задач(-и,-a)."
        android:textSize="17sp"
        android:textColor="#ff6600"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="23dp"
        android:text="На данный момент, по нашим сведеньям, вы:"
        android:textSize="17sp"
        android:textColor="#ffaf1a"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_marginStart="11dp"
        android:layout_toEndOf="@+id/textView2"
        android:hint="0"
        android:textSize="17sp"
        android:textColor="#ff6600"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Table"
        android:layout_centerHorizontal="true"
        android:text="    Трудитесь, планируйте день и   достигайте поставленных целей!"
        android:textSize="22sp"
        android:textColor="#ff005e"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="83dp"
        android:hint="Звание"
        android:textColor="#ffaf1a"
        android:textSize="22sp" />
</RelativeLayout>
