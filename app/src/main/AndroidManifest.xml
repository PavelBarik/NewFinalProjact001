<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pavel.finalpj10">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        />
        <activity
            android:name=".SplashActivity"
            android:label="Календарь"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Календарь"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TaskActivity"
            android:label="@string/Zadacha"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".ReminderService" />

        <activity
            android:name=".StatisticsActivity"
            android:label="Статистика планирования" />
        <activity
            android:name=".NewTask"
            android:label="Планировщик дня"></activity>
        <activity android:name=".ProgressActivity"></activity>
    </application>

</manifest>